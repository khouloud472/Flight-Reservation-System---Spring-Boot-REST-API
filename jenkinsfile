pipeline {
    agent any

    environment {
        APP_NAME = "Flight-Reservation-System"
        JAR_NAME = "reservationavion.jar"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Clonage du projet...'
                git branch: 'main', url: 'https://github.com/khouloud472/Flight-Reservation-System---Spring-Boot-REST-API.git'
            }
        }

        stage('Build') {
            steps {
                echo 'üèóÔ∏è Compilation du projet...'
                sh 'mvn clean compile'
            }
        }

        stage('Tests') {
            steps {
                echo 'üß™ Ex√©cution des tests unitaires...'
                sh 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package') {
            steps {
                echo 'üì¶ Cr√©ation du jar ex√©cutable...'
                sh 'mvn package -DskipTests'
            }
        }

        stage('Deploy (Local)') {
            steps {
                echo 'üöÄ Lancement de l‚Äôapplication...'
                sh 'nohup java -jar target/*.jar > app.log 2>&1 &'
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline ex√©cut√© avec succ√®s !'
        }
        failure {
            echo '‚ùå Erreur dans le pipeline.'
        }
    }
}
